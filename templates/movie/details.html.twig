{% extends 'base.html.twig' %}

{% block title %}Movie : {{ movie.title }}{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Titre : {{ movie.title }}</h1>
    <h2>Réalisé le : {{ movie.releasedAt|date("d M Y") }}</h2>
    <h3>Genres : {{ movie.genre|join(', ', ' and ') }}</h3>
</div>
{% endblock %}
