{% block title %}Movie :
	{{ movie is not null ?  movie.title : 'Not Found' }}
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		{% if movie is not null %}
			<h1>Titre :
				{{ movie.title }}</h1>
			<ul>
